{
  "files.exclude": {

    // general
    ".vscode": true,

    // parceljs
    "**/.parcel-cache": true,
    
    // tinijs
    "**/www": true,

    // app
    "app/**/*.js": true,
    "app/**/*.d.ts": true,
    "configs/**/*.js": true,
    "configs/**/*.d.ts": true,
    "layouts/**/*.js": true,
    "layouts/**/*.d.ts": true,
    "pages/**/*.js": true,
    "pages/**/*.d.ts": true,
    "components/**/*.js": true,
    "components/**/*.d.ts": true,
    "services/**/*.js": true,
    "services/**/*.d.ts": true,
    "helpers/**/*.js": true,
    "helpers/**/*.d.ts": true,
    "consts/**/*.js": true,
    "consts/**/*.d.ts": true,

    // lib
    "public-api.js": true,
    "public-api.d.ts": true,
    "**/*.js.map": true

  }  
}